<div class="span10">
	<div class="hero-unit panel" ng-controller = "OrganizeCtrl">

		<p class="lead">
			hi <%= user.first_name.capitalize%>, your friends think you will enjoy these...				
		</p>

		<%= filter_bar%>

		<blockquote ng-repeat="post in posts | filter:search">
			<%= render "common/post"%>
			<%= delete_btn%>
			<%= archive_btn%> 
			
			<a ng-hide="post.liked" ng-click="likeTogglePost(post)"><span class="badge">like</span></a>
			<a ng-show="post.liked" ng-click="likeTogglePost(post)"><span class="badge badge-info">like</span></a>

			<hr>

			<%= render "common/comment"%>


		</blockquote>

	</div>
</div>

