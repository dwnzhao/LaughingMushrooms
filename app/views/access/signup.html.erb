<% @page_title ="Sign Up"%>

<div class="hero-unit form">
	<% if current_page?("signup")%>
	<p class="lead">Sign Up </p>
	<%else%>
	<p class="lead">Profile </p>
	<%end%>


	<hr><br/>

	<%= error_messages_for(@user)%>

	<%= form_for :user, :url => {:action => 'create'}, :html => {:class => 'form-horizontal'} do |f| %>

	<div class="control-group">
		<%= f.label(:first_name, "First Name*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:first_name) %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:last_name, "Last Name*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.text_field(:last_name)%>
		</div>
	</div>

	<div class="control-group">
		<%= f.label(:email, "Email*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.email_field(:email)%>
		</div>
	</div>

	<% if current_page?("signup")%>

	<div class="control-group">
		<%= f.label(:password, "Password*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.password_field(:password)%>
		</div>
	</div>
	<div class="control-group">
		<%= f.label(:password_confirmation, "Retype Password*", :class=> 'control-label')%>
		<div class="controls">
			<%= f.password_field(:password_confirmation)%>
		</div>
	</div>				


	<div class="control-group">
		<div class="controls">
			<%= f.check_box(:terms_and_conditions) %> 
			<small>I agree to <a href="#">terms and conditions</a></small>
		</div>
	</div>


	<br><br>
	<p> 
		<small>
			Already have an account? <span style="text-decoration:underline;"><%= link_to('Log in', {:action => 'login'})%></span> 
		</small>
	</p>

	<%= submit_tag "sign up", :class=>'btn btn-success'%>

	<% end %>
	<br/><hr>

	<%end%>
</div>

