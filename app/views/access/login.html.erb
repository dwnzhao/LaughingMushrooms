<% @page_title = "Log In"%>

<div class="hero-unit form">

	<p class="lead">Log In </p> 
	<hr>

	<%= form_tag({:action => "authenticate", :controller => "access"}, :class => 'form-horizontal') do %>


	<div class="control-group">
		<%= label_tag 'inputEmail:', 'Email:', :class=> 'control-label'%>
		<div class="controls">
			<%= text_field_tag(:email, params[:email], :id => 'inputEmail')%>
		</div>
	</div>

	<div class="control-group">
		<%= label_tag 'inputPassword:', 'Password:', :class=> 'control-label'%>
		<div class="controls">
			<%= password_field_tag(:password, params[:password], :id => 'inputPassword')%>
		</div>
	</div>

	<br>
	<%= submit_tag "log in", :class => "btn btn-success"%>
	<%end%>
	<br>
	
	
	<p>			
		Need a new account? 
		<span style="text-decoration:underline;"> <%= link_to('sign up', {:action => 'signup'})%></span> 
	</p>
</div>
